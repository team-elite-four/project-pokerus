<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightDefault" android:padding="16dp"
    tools:context=".ui.pokedex.pokemoninfopager.PokemonDescriptionFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pokemonDescriptionImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/pokemonDescriptionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_a"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/pokemonDescriptionImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pokemonDescriptionImage"
        app:layout_constraintTop_toTopOf="@+id/pokemonDescriptionImage"
        tools:text="Pokemon Name" />


    <View
        android:id="@+id/div1"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/pokemonDescriptionImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pokemonDescriptionFlavorTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div1" />


    <TextView
        android:id="@+id/pokemonDescriptionFlavorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDescriptionFlavorTextTitle"
        tools:text="Flavor Text Description" />


</androidx.constraintlayout.widget.ConstraintLayout>